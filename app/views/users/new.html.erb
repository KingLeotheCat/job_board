<h1>Fill out the form to create your account</h1>

    <%= form_for(@user, url: '/signup') do |f| %>

        <%= f.label :username %>
        <%= f.text_field :username %>
        <br>
        <br>
        <%= f.label :email %>
        <%= f.email_field :email, required: true %>
        <br>
        <br>
        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit "Submit" %>


    <% end %>